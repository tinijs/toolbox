{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["DOM", "ESNext"],
    "outDir": "dist",
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "www"
  ],
  "typedocOptions": {
    "entryPoints": [
      "schema/index.ts",
      "app/index.ts",
      "common/index.ts",
      "content/index.ts",
      "crypto/index.ts",
      "fetch/index.ts",
      "localstorage/index.ts",
      "gun/index.ts"
    ],
    "out": "www"
  }
}
