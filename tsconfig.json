{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts"
  ],
  "typedocOptions": {
    "entryPoints": [
      "schema/index.ts",
      "app/index.ts",
      "common/index.ts",
      "content/index.ts",
      "crypto/index.ts",
      "fetch/index.ts",
      "localstorage/index.ts",
      "gun/index.ts"
    ],
    "out": "www",
    "exclude": ["test"]
  }
}
